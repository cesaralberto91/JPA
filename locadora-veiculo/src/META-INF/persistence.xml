<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="conexaoPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>br.edu.ifsp.pep.modelo.Cliente</class>
    <class>br.edu.ifsp.pep.modelo.Locacao</class>
    <class>br.edu.ifsp.pep.modelo.TipoVeiculo</class>
    <class>br.edu.ifsp.pep.modelo.Veiculo</class>
    <class>br.edu.ifsp.pep.modelo.VeiculoLocado</class>
    <shared-cache-mode>NONE</shared-cache-mode>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/db_aula"/>
      <property name="javax.persistence.jdbc.user" value="ifsp"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.password" value="ifsp"/>
    </properties>
  </persistence-unit>
</persistence>
